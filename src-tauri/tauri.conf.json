{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "transparent-overlay",
  "mainBinaryName": "transparent-overlay",
  "version": "0.1.0",
  "identifier": "com.transparent-overlay.app",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "transparent-overlay",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}